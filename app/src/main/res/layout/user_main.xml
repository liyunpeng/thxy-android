        <cn.tihuxueyuan.utils.SettingItemBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update_software"
            my:icon="@drawable/little_monk"
            my:hint="版本更新"
            android:background="@drawable/selector"
            >
        </cn.tihuxueyuan.utils.SettingItemBar>

        <cn.tihuxueyuan.utils.SettingItemBar
            android:layout_width="match_parent"
